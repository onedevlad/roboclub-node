section.section.contacts-section.dark.row
  .col-sm-6
    .row
      .col-xs-10.col-xs-offset-1
        h3.section__title Контакти
        .contacts-section__info.row
          .contacts-section__info-item.col-xs-6
            i.fa.fa-map-marker(aria-hidden='true')
            p
              span=commonLayout.footer.cityName
              br
              span=commonLayout.footer.address
          .contacts-section__info-item.col-xs-6
            i.fa.fa-phone(aria-hidden='true')
            p
              a(href='tel:'+commonLayout.footer.primaryPhoneNumber)=commonLayout.footer.primaryPhoneNumber
              br
              a(href='tel:'+commonLayout.footer.secondaryPhoneNumber)=commonLayout.footer.secondaryPhoneNumber
    .row
      .col-xs-10.col-xs-offset-1
        h3.section__title Напишіть нам
        form(method='POST', action='/contact').basic-form
          .basic-form__line
            .basic-form__col
              input.basic-input(type='text', name='name', placeholder='Ім’я' required)
            .basic-form__col
              input.basic-input(type='email', name='email', placeholder='E-mail')
            .basic-form__col
              input.basic-input(type='text', name='phone', placeholder='Телефон')
          .basic-form__line
            input.basic-input(type='text', name='subject', placeholder='Тема повідомлення' required)
          .basic-form__line
            textarea.basic-textarea(name='message', placeholder='Повідомлення', required)
          .row
            //- Let someone else get f*cked by this thing, I've got enough on my plate.
            //- .col-xs-6.captcha-wrapper
            //-   img(src='/images/reCaptcha.png')
            .col-xs-12.submit-button-wrapper
              button.basic-form__submit.basic-btn.yellow(type='submit') Надіслати
  .col-sm-6.map-wrapper
    #map
    script.
      var footerConfig = !{commonLayout.footer}
    script.
      function initMap() {
        var mapDiv = document.getElementById('map');
        var map = new google.maps.Map(mapDiv, {
          center: {lat: +footerConfig.geoLat, lng: +footerConfig.geoLng},
          zoom: 17,
          disableDefaultUI: true,
          draggable: true
        })
        var marker = new google.maps.Marker({
          position: new google.maps.LatLng(+footerConfig.geoLat, +footerConfig.geoLng),
          map: map,
          title: 'Робоклуб',
          icon: '/images/icons/marker.svg'
        })
      }
    script(async, defer, src='https://maps.googleapis.com/maps/api/js?key=AIzaSyA-ZEocFpuybFyJZg92LhWsvIJdo56S34s&callback=initMap&language=uk&region=UA"')
