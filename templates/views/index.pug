    section.section.quotes-section
      .container
        .quotes-slider
          each quote in quotes
            +quote(quote.author, quote.text, quote.authorAvatar)
    section.section
      .container
        h2.section__title Останні новини
        br
        .row.news-container
          each post, index in posts
