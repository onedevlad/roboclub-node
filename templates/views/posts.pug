extends ../layouts/default


block content
  main.content
    h2.content-title Новини
    .container
      .slick-news-slider
        -for(let i=0; i<=Math.ceil(data.posts.length/12); i++)
          -if(i*12 < data.posts.length)
            .slide
              -for(let j=0; j<12; j++)
                -if(i*12+j < data.posts.length)
                  -let post = data.posts[i*12+j]
                  +preview({
                    title: post.briefDescription,
                    date: post.publishedDate,
                    bgSRC: post.heroImage && post.heroImage.url,
                    link: `/post/${post.slug}`,
                    forceBgLazyLoad: true,
                    stripy: 'blue',
                  })
                  +preview({
                    title: post.briefDescription,
                    date: post.publishedDate,
                    bgSRC: post.heroImage && post.heroImage.url,
                    link: `/post/${post.slug}`,
                    forceBgLazyLoad: true,
                    stripy: 'blue',
                  })
                -else break
      ul.pager-list
        li.pager-list__item
          span.pager-list__link.slick-news-slider-prev &#9668
        li.pager-list__item
          span.pager-list__link.slick-news-slider-next &#9658