extends ../layouts/default


block content
  include ../mixins/teamMember

  main.content.team
    h2.content-title Наша команда
    .container
      .row
        each member in team
          +teamMember(member.person, member.bio, member.avatar.url, [
            {name: 'facebook', link: member.facebookLink},
            {name: 'instagram', link: member.instagramLink}
          ])
    .row.button-wrapper
      a(href=commonLayout.becomeTeamMemberLink).basic-btn.yellow Стати членом команди